<footer class="store-footer" 
    {% if theme.settings.get('footer_style') == 'footer_is_color' %}
        style="background-color: {{ theme.settings.get('footer_bg_color') }}"
    {% elseif theme.settings.get('footer_style') == 'footer_is_image' %}
        style="background-image: url('{{ theme.settings.get('footer_image') }}'); background-size: cover; background-position: center; background-repeat: no-repeat; color:white!important"
    {% endif %}
>
	<div aria-label="footer" class="store-footer__inner !bg-transparent">
		<div class="flex flex-col justify-center items-center mt-6 mb-20">
			{% if store.logo %}
				<img src="{{ store.logo | cdn(120, 120) }}" alt="{{ store.name }}" class="w-32 mb-6">
			{% endif %}

			{% if store.description %}
				<div class="max-w-sm md:max-w-lg text-center leading-6 mb-6">
					{{ store.description|raw }}
				</div>
			{% endif %}
		</div>
		<div class="container grid grid-cols-2 gap-8 lg:gap-60 px-12">
			<div>
				<h3>{{ trans('blocks.footer.pages_links') }}</h3>
				<salla-menu class="!text-xs" source="footer"></salla-menu>
			</div>

			<div>
				<div class="flex flex-col">
					<h3>{{ trans('blocks.footer.follow_us') }}</h3>
					<salla-social class="mb-6 flex-wrap"></salla-social>
				</div>
			</div>


			{# <div>
				<salla-contacts></salla-contacts>
			</div> #}

			{# <salla-apps-icons class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20"></salla-apps-icons> #}

		</div>
		{% if theme.settings.get('is_show_tax_sbc') == true %}
			<div class="container grid grid-cols-2 gap-2 lg:gap-60 px-12 mt-10">
				{% if store.settings.tax.number %}
					<div class="flex items-center gap-2 bg-white rounded-md px-2 py-2 md:max-w-[10rem]">
						{% if store.settings.tax.certificate %}
						<a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/"
							alt="{{ store.settings.tax.number }}">
							<img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}"
								data-src="{{'images/tax.png' | cdn(70,70)}}"
								class="lazy w-7 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
						</a>
						{% endif %}
						<div>
							<p class="text-xs text-gray-500">{{ trans('common.elements.tax_number') }}</p>
							<b class="text-xs text-gray-400">{{ store.settings.tax.number }}</b>
						</div>
					</div>

					{% if store.settings.tax.certificate %}
					<div class="flex items-center promark-sbc-container bg-white rounded-md p-3 md:max-w-[10rem]">
						<salla-payments class="promark-sbc-payments flex-row-reverse">
							<span class="s-payments-sbc-image text-xs text-gray-500">
								موثوق لدى
								<br>
								مركز الأعمال
							</span>
						</salla-payments>
					</div>
					{% endif %}
				</div>

				{% if store.settings.tax.certificate %}
				<salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}"
					modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
					<div class="flex justify-center max-w-full">
						<img class="w-full" loading="lazy" src="{{ 'images/s-empty.png' | cdn }}"
							data-src="{{ store.settings.tax.certificate }}" alt="{{ store.settings.tax.number }}" />
					</div>
				</salla-modal>
				{% endif %}
				{% endif %}
			</div>
		{% endif %}

	<div class="md:flex items-center {% if theme.settings.get('is_show_payment_methods') == true %}justify-between{% else %}justify-center{% endif %} py-4 container text-center border-t border-gray-200 w-[90%] mx-auto mt-10">
		{% if theme.settings.get('footer_custom_copyright') %}
			<span class="text-sm copyright-text">
				{{ theme.settings.get('footer_custom_copyright') }}
			</span>
		{% else %}
			<span class="text-sm copyright-text">{% hook copyright %}</span>
		{% endif %}
		{% if theme.settings.get('is_show_payment_methods') == true %}
			<salla-payments class="promark-payment-methods mt-4 md:mt-0"></salla-payments>
		{% endif %}
	</div>
</div>

<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3"></span></footer>

<style>
	/* Show only SBC in the first salla-payments */
	.promark-sbc-container salla-payments .s-payments-list-item:not(:has(.s-payments-sbc-image)) {
		display: none !important;
	}
	.promark-sbc-container salla-payments .s-payments-list-item:has(.s-payments-sbc-image) {
		display: flex !important;
		align-items: center;
		gap: 0.5rem;
	}

	/* Hide SBC in the bottom salla-payments */
	.promark-payment-methods .s-payments-list-item:has(.s-payments-sbc-image) {
		display: none !important;
	}
</style>


{% if not is_page('cart') %}
<script src="{{ 'navigation-cart.js'| asset }}"></script>
<div class="hidden">
  <custom-navigation-cart></custom-navigation-cart>
</div>
<aside class="tela-cart-aside fixed top-0 rtl:right-0 ltr:left-0 h-screen w-full md:w-[34rem] bg-white shadow-lg transform rtl:translate-x-full ltr:-translate-x-full transition-transform duration-300 z-[70] group">
  <div class="fixed close-cart-button opacity-0 group-[.show]:opacity-100 group-[.show]:w-screen group-[.show]:h-screen group-[.show]:rtl:right-[34rem] group-[.show]:ltr:left-[34rem] bg-black/10 -z-1"></div>
  <div class="flex flex-col h-full">
    {# Header #}
    <div class="flex items-center justify-between p-4 border-b">
      <h3 class="text-lg font-bold">{{ trans('blocks.header.cart') }}</h3>
      <button class="close-cart-button p-2">
        {# <i class="sicon-cancel-circle text-3xl text-red-600"></i> #}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon feather feather-x" aria-hidden="true" focusable="false" role="presentation"><path d="M18 6 6 18M6 6l12 12"></path></svg>
      </button>
    </div>

    {# Cart Items #}
    <div class="flex-1 overflow-y-auto cart_items_aside">
    </div>
  </div>
</aside>
<style>

  .tela-cart-aside {
    @apply shadow-xl;
  }

  /* RTL specific styles */
  html[dir="rtl"] .tela-cart-aside {
    left: 0;
    right: auto;
    transform: translateX(-100%);
  }

  html[dir="rtl"] .tela-cart-aside.show {
    transform: translateX(0);
  }

  /* LTR specific styles */
  html[dir="ltr"] .tela-cart-aside {
    left: auto;
    right: 0;
    transform: translateX(100%);
  }

  html[dir="ltr"] .tela-cart-aside.show {
    transform: translateX(0);
  }
  .cart_items_aside::-webkit-scrollbar {
    width: 0px;
    background: white
  }
</style>
{% endif %}
