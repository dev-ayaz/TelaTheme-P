<section class="s-block s-block--enhanced-store-features"
style="background-color: {{ component.bg_color|default('#F9F3ED') }};"
>
  <div class="enhanced-features-wrapper container p-6 md:p-8">
    
    {# Header with title and CTA #}
    <div class="enhanced-features-header flex flex-col sm:flex-row items-start sm:items-center gap-4 mb-8">
      {% if component.title %}
        <h2 class="text-2xl md:text-4xl text-primary">{{ component.title }}</h2>
      {% endif %}
      
      {% if component.cta and component.url %}
        <salla-button href="{{ component.url }}"
        size="medium"
        fill="outline"
        class="!rounded-full"
        >
          {{ component.cta }}
        </salla-button>
      {% endif %}
    </div>
    
    {# Features grid #}
    {% if component.features|length %}
      <div class="enhanced-features-grid bg-white rounded-2xl py-8 px-6 md:py-10 md:px-14 grid grid-cols-1 md:grid-cols-{{ component.features|length }} gap-6 md:gap-4">
        {% for feature in component.features %}
          <div class="enhanced-feature px-0 md:px-6 text-center rtl:md:text-right ltr:md:text-left">
            {% if feature.title %}
              <h3 class="md:max-w-[12rem] text-lg md:text-xl font-semibold mb-2 text-primary">{{ feature.title }}</h3>
            {% endif %}
            
            {% if feature.desc %}
              <p class="text-sm md:text-base text-primary">{{ feature.desc }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
    
  </div>
</section>

