<section class="s-block s-block--title-with-media">
  <div class="title-media-wrapper container py-8 md:py-12 px-12">
    <div class="flex flex-col md:flex-row items-start md:items-center md:justify-between gap-6 md:gap-8">
      
      {# Content Section #}
      <div class="title-media-content flex flex-col items-start gap-4 md:gap-6 w-full md:w-1/2">
        {% if component.title %}
          <h2 class="text-xl md:text-3xl font-bold text-primary leading-tight">{{ component.title|nl2br|raw }}</h2>
        {% endif %}
        
        {% if component.desc %}
          <p class="text-base md:text-lg text-primary font-light">{{ component.desc|nl2br|raw }}</p>
        {% endif %}
        
        {% if component.cta and component.url %}
          <salla-button href="{{ component.url }}" 
            size="medium"
            fill="solid"
            >
            {{ component.cta }}
          </salla-button>
        {% endif %}
      </div>
      
      {# Media Section #}
      <div class="title-media-visual w-full md:w-[35%] md:mx-auto">
        {% if component.content_type == 'video' and component.video %}
          <div class="video-container rounded-none overflow-hidden aspect-[4/4.5]">
            <video src="{{ component.video }}" class="w-full h-full object-cover" autoplay loop muted playsinline></video>
          </div>
        {% elseif component.image %}
          <div class="image-container rounded-none overflow-hidden aspect-[4/4.5]">
            <img src="{{ component.image }}" alt="{{ component.title }}" class="w-full h-full object-cover">
          </div>
        {% endif %}
      </div>
      
    </div>
  </div>
</section>

