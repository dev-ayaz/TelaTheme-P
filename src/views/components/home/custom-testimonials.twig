<section class="s-block s-block--testimonials s-block--custom-testimonials overflow-hidden py-12"
style="background-color: {{ component.bg_color|default('#fff') }};"
>
	<div class="s-reviews-container container grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-8">
		<div class="s-reviews-header-wrapper md:col-span-3 flex flex-col gap-4 items-center md:items-start">
			<h1 class="text-2xl md:text-3xl font-bold text-primary">
				{{ component.title }}
			</h1>
		</div>
		<salla-slider
		centered
		centered
		controls-outer
		auto-play
		slides-per-view="1"
		type="testimonials"
		class="testimonials-slider s-slider-wrapper md:col-span-9"
		id="custom-testimonials-{{ position }}-slider"
		 >
			<div slot="items">
				{% for index, item in component.items %}
					<div class="s-reviews-swiper-slide swiper-slide" style="width: 830px;">
						<div class="s-reviews-testimonial !bg-transparent md:!bg-white/70 rounded-2xl">
							<div class="s-reviews-testimonial__inner">
								<div class="s-reviews-testimonial__text">
									<p class="text-center rtl:md:text-right ltr:md:text-left">{{ item.text }}</p>
									<div class="s-reviews-testimonial__rating !mx-0 mt-4">
										<salla-rating-stars class="flex justify-center md:justify-start" size="small" value="{{ item.stars }}"></salla-rating-stars>
									</div>
									<div class="s-reviews-testimonial__name_wrapper items-center mt-4">
										<div class="s-reviews-testimonial__info">
											<h2 class="font-bold text-xs xs:text-sm">{{ item.name }}</h2>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</salla-slider>
	</div>
</section>


<style>
	.s-block--testimonials .s-slider-block__title-nav {
		display: flex !important;
	}
</style>